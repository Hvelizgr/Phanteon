<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Phanteon.ViewModels"
             x:Class="Phanteon.Views.DispositivosPage"
             Title="Dispositivos">

    <ContentPage.BindingContext>
        <!-- El ViewModel se inyectar치 autom치ticamente si est치 registrado en DI -->
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">

        <!-- Barra superior con bot칩n de cargar -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,10">
            <Button Text="Cargar Dispositivos"
                    Command="{Binding CargarDispositivosCommand}"
                    IsEnabled="{Binding EstaCargando, Converter={StaticResource InvertedBoolConverter}}" />
            <ActivityIndicator IsRunning="{Binding EstaCargando}"
                             IsVisible="{Binding EstaCargando}" />
        </HorizontalStackLayout>

        <!-- Lista de dispositivos -->
        <CollectionView Grid.Row="1"
                       ItemsSource="{Binding Dispositivos}"
                       SelectedItem="{Binding DispositivoSeleccionado}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                        <Label Grid.Row="0" Grid.Column="0"
                              Text="{Binding SerialDispositivo}"
                              FontAttributes="Bold"
                              FontSize="16" />
                        <Label Grid.Row="1" Grid.Column="0"
                              Text="{Binding MAC}"
                              FontSize="12"
                              TextColor="Gray" />
                        <Label Grid.Row="2" Grid.Column="0"
                              Text="{Binding Direccion}"
                              FontSize="12" />
                        <Label Grid.Row="0" Grid.Column="1"
                              Text="{Binding Activo}"
                              VerticalOptions="Center"
                              FontSize="12" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Mensaje de error -->
        <Label Grid.Row="2"
              Text="{Binding MensajeError}"
              TextColor="Red"
              IsVisible="{Binding MensajeError, Converter={StaticResource StringNotEmptyConverter}}"
              Margin="0,10,0,0" />
    </Grid>

</ContentPage>
