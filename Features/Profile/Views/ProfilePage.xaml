<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:profile="clr-namespace:Phanteon.Features.Profile.ViewModels"
             x:Class="Phanteon.Features.Profile.Views.ProfilePage"
             x:DataType="profile:ProfileViewModel"
             Title="Mi Perfil"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1A1A1A}">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior>
            <BackButtonBehavior.IconOverride>
                <FontImageSource FontFamily="FontAwesomeSolid"
                                Glyph="&#xF053;"
                                Size="20"
                                Color="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
            </BackButtonBehavior.IconOverride>
        </BackButtonBehavior>
    </Shell.BackButtonBehavior>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header Gradient Background -->
            <Grid HeightRequest="200" Margin="-20,-20,-20,0">
                <BoxView>
                    <BoxView.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource Primary}" Offset="0.0"/>
                            <GradientStop Color="{StaticResource Secondary}" Offset="1.0"/>
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>
            </Grid>

            <!-- Card de Perfil con Avatar -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    StrokeThickness="0"
                    Padding="30"
                    Margin="0,-80,0,0"
                    x:Name="ProfileCard">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25"/>
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="#000000"
                            Offset="0,8"
                            Radius="25"
                            Opacity="0.15"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

                    <!-- Avatar con Iniciales y Border Gradient -->
                    <Grid WidthRequest="120" HeightRequest="120" HorizontalOptions="Center">
                        <!-- Outer Ring -->
                        <Border StrokeThickness="4"
                                WidthRequest="120"
                                HeightRequest="120">
                            <Border.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource Primary}" Offset="0.0"/>
                                    <GradientStop Color="{StaticResource Secondary}" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Stroke>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="60"/>
                            </Border.StrokeShape>
                        </Border>

                        <!-- Avatar Circle -->
                        <Border BackgroundColor="{StaticResource Primary}"
                                StrokeThickness="0"
                                WidthRequest="105"
                                HeightRequest="105"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="52.5"/>
                            </Border.StrokeShape>

                            <Border.Shadow>
                                <Shadow Brush="{StaticResource Primary}"
                                        Offset="0,4"
                                        Radius="15"
                                        Opacity="0.4"/>
                            </Border.Shadow>

                            <Label Text="{Binding UserInitials}"
                                   FontSize="42"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>

                    <!-- Nombre del Usuario -->
                    <Label Text="{Binding UserName}"
                           FontSize="26"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>

                    <!-- Email del Usuario -->
                    <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="&#xF0E0;"
                               FontFamily="FontAwesomeSolid"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                               VerticalOptions="Center"/>
                        <Label Text="{Binding UserEmail}"
                               FontSize="15"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Badge de Rol -->
                    <Border Padding="16,8"
                            HorizontalOptions="Center">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="{AppThemeBinding Light=#E3F2FD, Dark=#1E3A5F}" Offset="0.0"/>
                                <GradientStop Color="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>

                        <HorizontalStackLayout Spacing="8">
                            <Label Text="&#xF507;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="14"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center"/>
                            <Label Text="{Binding UserRole}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                </VerticalStackLayout>
            </Border>

            <!-- Estadísticas de Usuario -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Border Grid.Column="0"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                        StrokeThickness="0"
                        Padding="15,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,4" Radius="10" Opacity="0.08"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="&#xF017;"
                               FontFamily="FontAwesomeSolid"
                               FontSize="24"
                               TextColor="{StaticResource Primary}"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding DaysActive}"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                        <Label Text="Días"
                               FontSize="12"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="1"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                        StrokeThickness="0"
                        Padding="15,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,4" Radius="10" Opacity="0.08"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="&#xF2F2;"
                               FontFamily="FontAwesomeSolid"
                               FontSize="24"
                               TextColor="#4CAF50"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding DevicesCount}"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                        <Label Text="Dispositivos"
                               FontSize="12"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="2"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                        StrokeThickness="0"
                        Padding="15,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,4" Radius="10" Opacity="0.08"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="&#xF0AC;"
                               FontFamily="FontAwesomeSolid"
                               FontSize="24"
                               TextColor="#FF9800"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding SessionsCount}"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                        <Label Text="Sesiones"
                               FontSize="12"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Información de la Cuenta -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    StrokeThickness="0"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="#000000"
                            Offset="0,4"
                            Radius="10"
                            Opacity="0.1"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">

                    <Label Text="Información de la Cuenta"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>

                    <!-- ID de Usuario -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Label Grid.Column="0"
                               Text="&#xF2C2;"
                               FontFamily="FontAwesomeSolid"
                               FontSize="20"
                               TextColor="{StaticResource Primary}"
                               VerticalOptions="Center"/>

                        <VerticalStackLayout Grid.Column="1" Spacing="3">
                            <Label Text="ID de Usuario"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                            <Label Text="{Binding UserId}"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <BoxView HeightRequest="1"
                             Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>

                    <!-- Email -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Label Grid.Column="0"
                               Text="&#xF0E0;"
                               FontFamily="FontAwesomeSolid"
                               FontSize="20"
                               TextColor="{StaticResource Primary}"
                               VerticalOptions="Center"/>

                        <VerticalStackLayout Grid.Column="1" Spacing="3">
                            <Label Text="Correo Electrónico"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                            <Label Text="{Binding UserEmail}"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <BoxView HeightRequest="1"
                             Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>

                    <!-- Rol -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <Label Grid.Column="0"
                               Text="&#xF507;"
                               FontFamily="FontAwesomeSolid"
                               FontSize="20"
                               TextColor="{StaticResource Primary}"
                               VerticalOptions="Center"/>

                        <VerticalStackLayout Grid.Column="1" Spacing="3">
                            <Label Text="Rol"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                            <Label Text="{Binding UserRole}"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                        </VerticalStackLayout>
                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!-- Opciones de Perfil -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    StrokeThickness="0"
                    Padding="5">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="#000000"
                            Offset="0,4"
                            Radius="10"
                            Opacity="0.1"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="0">

                    <!-- Editar Perfil -->
                    <Border BackgroundColor="Transparent"
                            Padding="18"
                            x:Name="EditProfileButton">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EditProfileCommand}"/>
                        </Border.GestureRecognizers>

                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1E3A5F}"
                                    StrokeThickness="0"
                                    Padding="10"
                                    WidthRequest="40"
                                    HeightRequest="40">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Label Text="&#xF304;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="{StaticResource Primary}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                <Label Text="Editar Perfil"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                                <Label Text="Actualiza tu información personal"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                            </VerticalStackLayout>

                            <Label Grid.Column="2"
                                   Text="&#xF054;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <BoxView HeightRequest="1"
                             Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                             Margin="15,0"/>

                    <!-- Cambiar Contraseña -->
                    <Border BackgroundColor="Transparent"
                            Padding="18"
                            x:Name="ChangePasswordButton">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ChangePasswordCommand}"/>
                        </Border.GestureRecognizers>

                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#5D4037}"
                                    StrokeThickness="0"
                                    Padding="10"
                                    WidthRequest="40"
                                    HeightRequest="40">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Label Text="&#xF084;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="#FF9800"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                <Label Text="Cambiar Contraseña"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                                <Label Text="Mantén tu cuenta segura"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                            </VerticalStackLayout>

                            <Label Grid.Column="2"
                                   Text="&#xF054;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <BoxView HeightRequest="1"
                             Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                             Margin="15,0"/>

                    <!-- Notificaciones -->
                    <Border BackgroundColor="Transparent"
                            Padding="18"
                            x:Name="NotificationsButton">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ViewNotificationsCommand}"/>
                        </Border.GestureRecognizers>

                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}"
                                    StrokeThickness="0"
                                    Padding="10"
                                    WidthRequest="40"
                                    HeightRequest="40">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Label Text="&#xF0F3;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="#4CAF50"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                <Label Text="Notificaciones"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                                <Label Text="Gestiona tus preferencias"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                            </VerticalStackLayout>

                            <Label Grid.Column="2"
                                   Text="&#xF054;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <BoxView HeightRequest="1"
                             Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                             Margin="15,0"/>

                    <!-- Configuración -->
                    <Border BackgroundColor="Transparent"
                            Padding="18"
                            x:Name="SettingsButton">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ViewSettingsCommand}"/>
                        </Border.GestureRecognizers>

                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    BackgroundColor="{AppThemeBinding Light=#F3E5F5, Dark=#4A148C}"
                                    StrokeThickness="0"
                                    Padding="10"
                                    WidthRequest="40"
                                    HeightRequest="40">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Label Text="&#xF013;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="#9C27B0"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                <Label Text="Configuración"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                                <Label Text="Personaliza la aplicación"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                            </VerticalStackLayout>

                            <Label Grid.Column="2"
                                   Text="&#xF054;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                </VerticalStackLayout>
            </Border>

            <!-- Botón de Cerrar Sesión -->
            <Border StrokeThickness="0"
                    Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18"/>
                </Border.StrokeShape>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#D32F2F" Offset="0.0"/>
                        <GradientStop Color="#C62828" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Shadow>
                    <Shadow Brush="#D32F2F"
                            Offset="0,6"
                            Radius="15"
                            Opacity="0.4"/>
                </Border.Shadow>

                <Button Text="Cerrar Sesión"
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="17"
                        FontAttributes="Bold"
                        HeightRequest="56"
                        CornerRadius="18">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="FontAwesomeSolid"
                                        Glyph="&#xF2F5;"
                                        Color="White"
                                        Size="18"/>
                    </Button.ImageSource>
                </Button>
            </Border>

            <!-- Información de App -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center" Margin="0,15,0,30">
                <Label Text="{Binding AppVersion}"
                       FontSize="12"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                <Label Text="© 2025 Phanteon. Todos los derechos reservados."
                       FontSize="11"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=#CCCCCC, Dark=#555555}"/>
            </VerticalStackLayout>

            <!-- Indicador de Carga -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Color="{StaticResource Primary}"
                              HeightRequest="40"
                              WidthRequest="40"
                              HorizontalOptions="Center"
                              Margin="0,20"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
