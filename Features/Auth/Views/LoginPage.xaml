<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:auth="clr-namespace:Phanteon.Features.Auth.ViewModels"
             x:Class="Phanteon.Features.Auth.Views.LoginPage"
             x:DataType="auth:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1A1A1A}">

    <ScrollView>
        <VerticalStackLayout Padding="30,80,30,30" Spacing="20">

            <!-- Logo y Título -->
            <VerticalStackLayout Spacing="10" Margin="0,0,0,30">
                <Label Text="&#xF30C;"
                       FontFamily="FontAwesomeSolid"
                       FontSize="70"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="Center"/>

                <Label Text="Bienvenido"
                       FontSize="36"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>

                <Label Text="Inicia sesión para continuar"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
            </VerticalStackLayout>

            <!-- Formulario -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    StrokeThickness="0"
                    Padding="20"
                    Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow Brush="#000000"
                            Offset="0,4"
                            Radius="10"
                            Opacity="0.1"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">

                    <!-- Campo Nombre de Usuario -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Nombre de Usuario"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}"/>

                        <Border BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#1A1A1A}"
                                StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                Padding="15,10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>

                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                <Label Grid.Column="0"
                                       Text="&#xF007;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="{StaticResource Primary}"
                                       VerticalOptions="Center"/>

                                <Entry Grid.Column="1"
                                       Text="{Binding NombreUsuario}"
                                       Placeholder="Tu nombre de usuario"
                                       BackgroundColor="Transparent"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                       PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Campo Correo -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Correo Electrónico"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}"/>

                        <Border BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#1A1A1A}"
                                StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                Padding="15,10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>

                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                <Label Grid.Column="0"
                                       Text="&#xF0E0;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="{StaticResource Primary}"
                                       VerticalOptions="Center"/>

                                <Entry Grid.Column="1"
                                       Text="{Binding Correo}"
                                       Placeholder="ejemplo@correo.com"
                                       Keyboard="Email"
                                       BackgroundColor="Transparent"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                       PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Campo Contraseña -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Contraseña"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#CCCCCC}"/>

                        <Border BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#1A1A1A}"
                                StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                Padding="15,10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>

                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                <Label Grid.Column="0"
                                       Text="&#xF023;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="{StaticResource Primary}"
                                       VerticalOptions="Center"/>

                                <Entry Grid.Column="1"
                                       Text="{Binding Password}"
                                       Placeholder="Ingresa tu contraseña"
                                       IsPassword="{Binding ShowPassword, Converter={StaticResource InvertedBoolConverter}}"
                                       BackgroundColor="Transparent"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                       PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>

                                <Label Grid.Column="2"
                                       Text="{Binding ShowPassword, Converter={StaticResource BoolToEyeIconConverter}}"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="{AppThemeBinding Light=#666666, Dark=#999999}"
                                       VerticalOptions="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ToggleShowPasswordCommand}"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Recordarme y Olvidé mi contraseña -->
                    <Grid ColumnDefinitions="*,Auto">
                        <!-- Recordarme -->
                        <HorizontalStackLayout Grid.Column="0" Spacing="8">
                            <CheckBox IsChecked="{Binding RecordarMe}"
                                     Color="{StaticResource Primary}"/>
                            <Label Text="Recordarme"
                                   FontSize="14"
                                   VerticalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                        </HorizontalStackLayout>

                        <!-- Olvidé mi contraseña -->
                        <Label Grid.Column="1"
                               Text="¿Olvidaste tu contraseña?"
                               FontSize="14"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="{StaticResource Primary}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!-- Mensaje de Error -->
            <Label Text="{Binding ErrorMessage}"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullConverter}}"
                   TextColor="#D32F2F"
                   FontSize="14"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>

            <!-- Botón de Login -->
            <Button Text="Iniciar Sesión"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="15"
                    Margin="0,10,0,0">
                <Button.Shadow>
                    <Shadow Brush="{StaticResource Primary}"
                            Offset="0,4"
                            Radius="10"
                            Opacity="0.3"/>
                </Button.Shadow>
            </Button>

            <!-- Indicador de Carga -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Color="{StaticResource Primary}"
                              HeightRequest="40"
                              WidthRequest="40"
                              HorizontalOptions="Center"/>

            <!-- Separador -->
            <Grid ColumnDefinitions="*,Auto,*" Margin="0,20,0,0" ColumnSpacing="10">
                <BoxView Grid.Column="0"
                         HeightRequest="1"
                         VerticalOptions="Center"
                         Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>
                <Label Grid.Column="1"
                       Text="o"
                       FontSize="14"
                       VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                <BoxView Grid.Column="2"
                         HeightRequest="1"
                         VerticalOptions="Center"
                         Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>
            </Grid>

            <!-- Link a Registro -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                <Label Text="¿No tienes cuenta?"
                       FontSize="14"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>

                <Label Text="Regístrate"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToRegisterCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
