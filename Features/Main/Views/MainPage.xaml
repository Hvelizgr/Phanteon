<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Phanteon.Features.Main.ViewModels"
             x:Class="Phanteon.Features.Main.Views.MainPage"
             x:DataType="viewmodel:MainViewModel"
             Title="Phanteon">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Perfil"
                     Command="{Binding NavigateToProfileCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="FontAwesomeSolid"
                                Glyph="&#xF007;"
                                Size="20"
                                Color="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,30">
                <Label Text="Phanteon"
                       FontSize="36"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                <Label Text="Sistema de Gesti贸n de Dispositivos"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
            </VerticalStackLayout>

            <!-- Tarjetas de navegaci贸n -->
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" RowSpacing="15" ColumnSpacing="15">

                <!-- Dispositivos -->
                <Border Grid.Row="0" Grid.Column="0"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,6" Radius="15" Opacity="0.1"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToDispositivosCommand}"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Border StrokeThickness="0" Padding="20" WidthRequest="80" HeightRequest="80">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource Primary}" Offset="0.0"/>
                                    <GradientStop Color="{StaticResource Secondary}" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="&#xF2DB;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="40"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Label Text="Dispositivos"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Alertas -->
                <Border Grid.Row="0" Grid.Column="1"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,6" Radius="15" Opacity="0.1"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToAlertasCommand}"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Border StrokeThickness="0" Padding="20" WidthRequest="80" HeightRequest="80"
                                BackgroundColor="#F44336">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="&#xF071;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="40"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Label Text="Alertas"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Perfil -->
                <Border Grid.Row="1" Grid.Column="0"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,6" Radius="15" Opacity="0.1"/>
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}"/>
                    </Border.GestureRecognizers>

                    <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Border StrokeThickness="0" Padding="20" WidthRequest="80" HeightRequest="80"
                                BackgroundColor="#9C27B0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="&#xF007;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="40"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Label Text="Perfil"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Configuraci贸n (Placeholder) -->
                <Border Grid.Row="1" Grid.Column="1"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                        StrokeThickness="0"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,6" Radius="15" Opacity="0.1"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Border StrokeThickness="0" Padding="20" WidthRequest="80" HeightRequest="80"
                                BackgroundColor="#FF9800">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="&#xF013;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="40"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Label Text="Configuraci贸n"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                    </VerticalStackLayout>
                </Border>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
