<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dispositivos="clr-namespace:Phanteon.Features.Dispositivos.ViewModels"
             xmlns:models="clr-namespace:Phanteon.Models"
             x:Class="Phanteon.Features.Dispositivos.Views.DispositivoDetailPage"
             x:DataType="dispositivos:DispositivoDetailViewModel"
             Title="Detalle del Dispositivo"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1A1A1A}">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior>
            <BackButtonBehavior.IconOverride>
                <FontImageSource FontFamily="FontAwesomeSolid"
                                Glyph="&#xF053;"
                                Size="20"
                                Color="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
            </BackButtonBehavior.IconOverride>
        </BackButtonBehavior>
    </Shell.BackButtonBehavior>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Tarjeta Principal del Dispositivo -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    StrokeThickness="0"
                    Padding="25">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#000000" Offset="0,6" Radius="15" Opacity="0.1"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="20">

                    <!-- Icono y nombre del dispositivo -->
                    <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                        <Border StrokeThickness="0"
                                Padding="25"
                                WidthRequest="100"
                                HeightRequest="100"
                                HorizontalOptions="Center">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource Primary}" Offset="0.0"/>
                                    <GradientStop Color="{StaticResource Secondary}" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource Primary}" Offset="0,6" Radius="20" Opacity="0.3"/>
                            </Border.Shadow>

                            <Label Text="&#xF2DB;"
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="50"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <Label Text="{Binding Dispositivo.SerialDispositivo}"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>

                        <!-- Badge de estado -->
                        <Border Padding="15,8">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding Dispositivo.Activo, Converter={StaticResource DispositivoActivoToColorConverter}}"/>
                            </Border.Background>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15"/>
                            </Border.StrokeShape>

                            <Label Text="{Binding Dispositivo.Activo}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Información técnica -->
                    <VerticalStackLayout Spacing="15">

                        <!-- MAC Address -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1E3A5F}"
                                    StrokeThickness="0"
                                    Padding="12"
                                    WidthRequest="45"
                                    HeightRequest="45">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <Label Text="&#xF796;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="{StaticResource Primary}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                <Label Text="Dirección MAC"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                                <Label Text="{Binding Dispositivo.MAC}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                            </VerticalStackLayout>
                        </Grid>

                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>

                        <!-- Firmware -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#5D4037}"
                                    StrokeThickness="0"
                                    Padding="12"
                                    WidthRequest="45"
                                    HeightRequest="45">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <Label Text="&#xF085;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="#FF9800"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                <Label Text="Firmware"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                                <Label Text="{Binding Dispositivo.Firmware}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                            </VerticalStackLayout>
                        </Grid>

                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>

                        <!-- Ubicación -->
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}"
                                    StrokeThickness="0"
                                    Padding="12"
                                    WidthRequest="45"
                                    HeightRequest="45">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <Label Text="&#xF3C5;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="#4CAF50"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                <Label Text="Ubicación"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                                <Label Text="{Binding Dispositivo.Direccion}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                            </VerticalStackLayout>

                            <!-- Botón ver en mapa -->
                            <Border Grid.Column="2"
                                    BackgroundColor="{StaticResource Primary}"
                                    StrokeThickness="0"
                                    Padding="10"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AbrirMapaCommand}"/>
                                </Border.GestureRecognizers>
                                <Label Text="&#xF279;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="16"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                        </Grid>

                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>

                        <!-- Última Vista -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    BackgroundColor="{AppThemeBinding Light=#F3E5F5, Dark=#4A148C}"
                                    StrokeThickness="0"
                                    Padding="12"
                                    WidthRequest="45"
                                    HeightRequest="45">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <Label Text="&#xF017;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="#9C27B0"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                <Label Text="Última Vista"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                                <Label Text="{Binding Dispositivo.UltimaVista, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                            </VerticalStackLayout>
                        </Grid>

                        <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"/>

                        <!-- Registro -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    BackgroundColor="{AppThemeBinding Light=#E1F5FE, Dark=#01579B}"
                                    StrokeThickness="0"
                                    Padding="12"
                                    WidthRequest="45"
                                    HeightRequest="45">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <Label Text="&#xF133;"
                                       FontFamily="FontAwesomeSolid"
                                       FontSize="18"
                                       TextColor="#03A9F4"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="3" VerticalOptions="Center">
                                <Label Text="Fecha de Registro"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"/>
                                <Label Text="{Binding Dispositivo.Registro, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                            </VerticalStackLayout>
                        </Grid>

                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- Alertas Recientes -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    StrokeThickness="0"
                    Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#000000" Offset="0,4" Radius="10" Opacity="0.08"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">

                    <!-- Header -->
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Alertas Recientes"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>

                        <Border Grid.Column="1"
                                BackgroundColor="{StaticResource Primary}"
                                StrokeThickness="0"
                                Padding="8,4">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Label Text="{Binding AlertasCount}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                        </Border>
                    </Grid>

                    <!-- Lista de alertas -->
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding AlertasRecientes}"
                                        Spacing="10">
                        <BindableLayout.EmptyView>
                            <Label Text="No hay alertas recientes"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                   HorizontalOptions="Center"
                                   Margin="0,10"/>
                        </BindableLayout.EmptyView>

                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:Alerta">
                                <Border BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#1A1A1A}"
                                        StrokeThickness="0"
                                        Padding="15">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10"/>
                                    </Border.StrokeShape>

                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                        <Border Grid.Column="0"
                                                Padding="8"
                                                WidthRequest="35"
                                                HeightRequest="35">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding Severidad, Converter={StaticResource SeveridadToColorConverter}}"/>
                                            </Border.Background>
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8"/>
                                            </Border.StrokeShape>
                                            <Label Text="&#xF071;"
                                                   FontFamily="FontAwesomeSolid"
                                                   FontSize="14"
                                                   TextColor="White"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>

                                        <VerticalStackLayout Grid.Column="1" Spacing="3">
                                            <Label Text="{Binding TipoEvento}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"/>
                                            <Label Text="{Binding MarcaTiempo, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>

                    <!-- Botón ver todas -->
                    <Button Text="Ver Todas las Alertas"
                            Command="{Binding VerTodasAlertasCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            CornerRadius="12"
                            Margin="0,5,0,0"/>

                </VerticalStackLayout>
            </Border>

            <!-- Botones de acción -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Button Grid.Column="0"
                        Text="Editar"
                        Command="{Binding EditarDispositivoCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="15"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="FontAwesomeSolid"
                                        Glyph="&#xF304;"
                                        Color="White"
                                        Size="16"/>
                    </Button.ImageSource>
                </Button>

                <Button Grid.Column="1"
                        Text="Eliminar"
                        Command="{Binding EliminarDispositivoCommand}"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        FontSize="15"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="FontAwesomeSolid"
                                        Glyph="&#xF2ED;"
                                        Color="White"
                                        Size="16"/>
                    </Button.ImageSource>
                </Button>
            </Grid>

            <!-- Indicador de carga -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Color="{StaticResource Primary}"
                              HeightRequest="40"
                              WidthRequest="40"
                              HorizontalOptions="Center"
                              Margin="0,20"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
